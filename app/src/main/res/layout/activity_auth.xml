<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fredericborrel.atomicrss.view.AuthActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/auth_background"
        android:scaleType="centerCrop"
        android:tint="#70000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding"
        android:clipToPadding="false"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/tv_auth_app_text_size"
            android:textColor="@color/tv_auth_app_name_color"
            android:textStyle="bold"
            android:shadowColor="@color/tv_auth_drop_shadow_color"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_auth_height"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>

