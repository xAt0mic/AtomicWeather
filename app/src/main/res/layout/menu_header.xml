<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_menu_height"
    android:padding="@dimen/padding"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/menu_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/menu_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_above="@id/menu_email"
        android:layout_alignParentStart="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_image"
        android:layout_width="@dimen/iv_profile_size"
        android:layout_height="@dimen/iv_profile_size"
        android:layout_above="@id/menu_username"
        android:layout_alignParentStart="true"/>

</RelativeLayout>